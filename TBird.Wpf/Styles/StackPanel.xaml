<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DefaultStackPanel" TargetType="StackPanel">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <Style x:Key="HorizontalStackPanel" TargetType="StackPanel" BasedOn="{StaticResource DefaultStackPanel}">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>
    <Style x:Key="HorizontalStackPanel.Center" TargetType="StackPanel" BasedOn="{StaticResource HorizontalStackPanel}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="HorizontalStackPanel.Right" TargetType="StackPanel" BasedOn="{StaticResource HorizontalStackPanel}">
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>
</ResourceDictionary>
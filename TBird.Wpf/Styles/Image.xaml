<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="DefaultImage" TargetType="Image">
		<Setter Property="Focusable" Value="False" />
		<Setter Property="Margin" Value="0" />
		<Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Source.PixelWidth}" />
		<Setter Property="Height" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Source.PixelHeight}" />
	</Style>
</ResourceDictionary>